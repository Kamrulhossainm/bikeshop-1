{% schema %}
{
  "name": "Inquiry Form",
  "settings": [
    {
      "type": "text",
      "id": "form_title",
      "label": "Form Title",
      "default": "ðŸ§¾ Institutional Partnership Inquiry Form"
    },
    {
      "type": "textarea",
      "id": "form_subtitle",
      "label": "Form Subtitle",
      "default": "Partner with Firstline to equip your staff, patients, or institutional network with reliable, prescription-ready protection."
    },
    {
      "type": "textarea",
      "id": "form_intro",
      "label": "Form Introduction",
      "default": "Please complete the form below â€” our Institutional Partnership Team will contact you within 1â€“2 business days."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#e8f5e9"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#2e7d32"
    }
  ],
  "presets": [
    {
      "name": "Inquiry Form"
    }
  ]
}
{% endschema %}

<style>
  .institutional-section {
    background: {{ section.settings.background_color }};
    padding: 80px 20px;
    min-height: 100vh;
  }

  .institutional-form-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .form-header {
    text-align: center;
    margin-bottom: 50px;
    animation: fadeInDown 0.6s ease;
  }

  .form-header h1 {
    font-size: 42px;
    font-weight: 800;
    color: {{ section.settings.accent_color }};
    margin-bottom: 16px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.05);
  }

  .form-header .subtitle {
    font-size: 18px;
    color: #2d3748;
    line-height: 1.7;
    max-width: 800px;
    margin: 0 auto 30px;
  }

  .form-intro {
    background: linear-gradient(135deg, {{ section.settings.accent_color }}, #388e3c);
    color: white;
    padding: 24px 32px;
    border-radius: 12px;
    font-size: 16px;
    text-align: center;
    box-shadow: 0 8px 20px rgba(46, 125, 50, 0.2);
    margin-bottom: 40px;
    animation: fadeIn 0.8s ease;
  }

  .form-intro strong {
    font-weight: 700;
  }

  .institutional-form-wrapper {
    background: white;
    padding: 50px;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    animation: fadeInUp 0.8s ease;
  }

  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px 40px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  .form-group label {
    font-weight: 600;
    font-size: 15px;
    color: #1a202c;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
  }

  .required {
    color: #e53e3e;
    margin-left: 4px;
  }

  .form-group input[type="text"],
  .form-group input[type="email"],
  .form-group input[type="tel"],
  .form-group textarea,
  .form-group select {
    padding: 14px 18px;
    font-size: 15px;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    transition: all 0.3s ease;
    font-family: inherit;
    background: #f9fafb;
  }

  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    outline: none;
    border-color: {{ section.settings.accent_color }};
    background: white;
    box-shadow: 0 0 0 4px rgba(46, 125, 50, 0.1);
    transform: translateY(-1px);
  }

  .form-group textarea {
    min-height: 140px;
    resize: vertical;
  }

  .checkbox-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 14px;
  }

  .checkbox-group {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .checkbox-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: #f9fafb;
    border-radius: 8px;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }

  .checkbox-item:hover {
    background: #f0fdf4;
    border-color: {{ section.settings.accent_color }};
  }

  .checkbox-item input[type="checkbox"],
  .checkbox-item input[type="radio"] {
    width: 20px;
    height: 20px;
    cursor: pointer;
    accent-color: {{ section.settings.accent_color }};
  }

  .checkbox-item label {
    font-weight: 500;
    margin: 0;
    cursor: pointer;
    font-size: 15px;
    color: #2d3748;
  }

  .other-input {
    margin-left: 32px;
    margin-top: 8px;
    display: none;
  }

  .other-input.active {
    display: block;
    animation: slideDown 0.3s ease;
  }

  .radio-group {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 14px;
  }

  .submit-wrapper {
    grid-column: 1 / -1;
    margin-top: 20px;
  }

  .submit-btn {
    background: linear-gradient(135deg, {{ section.settings.accent_color }}, #388e3c);
    color: white;
    font-size: 18px;
    font-weight: 700;
    padding: 18px 50px;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    box-shadow: 0 6px 20px rgba(46, 125, 50, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(46, 125, 50, 0.4);
  }

  .submit-btn:active {
    transform: translateY(0);
  }

  .form-notice {
    margin-top: 20px;
    font-size: 13px;
    color: #718096;
    text-align: center;
  }

  .alert {
    padding: 20px 24px;
    border-radius: 12px;
    margin-bottom: 30px;
    font-size: 15px;
    animation: slideDown 0.4s ease;
  }

  .alert-success {
    background: #d4edda;
    color: #155724;
    border-left: 4px solid #28a745;
  }

  .alert-error {
    background: #f8d7da;
    color: #721c24;
    border-left: 4px solid #dc3545;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      max-height: 0;
    }
    to {
      opacity: 1;
      max-height: 100px;
    }
  }

  @media (max-width: 968px) {
    .form-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .checkbox-grid {
      grid-template-columns: 1fr;
    }

    .institutional-form-wrapper {
      padding: 30px 24px;
    }

    .form-header h1 {
      font-size: 32px;
    }

    .institutional-section {
      padding: 50px 20px;
    }
  }

  @media (max-width: 640px) {
    .form-header h1 {
      font-size: 26px;
    }

    .radio-group {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="institutional-section">
  <div class="institutional-form-container">
    <div class="form-header">
      <h1>{{ section.settings.form_title }}</h1>
      <p class="subtitle">{{ section.settings.form_subtitle }}</p>
    </div>

    <div class="form-intro">
      <strong>{{ section.settings.form_intro }}</strong>
    </div>

    <div class="institutional-form-wrapper">
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <div class="alert alert-success">
            <strong>âœ“ Thank you for your inquiry!</strong> Our Institutional Partnership Team will be in touch within 1â€“2 business days.
          </div>
        {% endif %}

        {% if form.errors %}
          <div class="alert alert-error">
            <strong>âš  Please correct the following:</strong>
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <input type="hidden" name="contact[form_type]" value="Institutional Partnership Inquiry">

        <div class="form-grid">
          <div class="form-group">
            <label for="organization_name">Organization Name:<span class="required">*</span></label>
            <input type="text" id="organization_name" name="contact[organization_name]" required>
          </div>

          <div class="form-group">
            <label for="contact_name">Contact Name:<span class="required">*</span></label>
            <input type="text" id="contact_name" name="contact[name]" required>
          </div>

          <div class="form-group">
            <label for="title">Title / Department:<span class="required">*</span></label>
            <input type="text" id="title" name="contact[title]" required>
          </div>

          <div class="form-group">
            <label for="email">Email Address:<span class="required">*</span></label>
            <input type="email" id="email" name="contact[email]" required>
          </div>

          <div class="form-group full-width">
            <label for="phone">Phone Number:<span class="required">*</span></label>
            <input type="tel" id="phone" name="contact[phone]" required>
          </div>

          <div class="form-group full-width">
            <label>Organization Type:<span class="required">*</span></label>
            <div class="checkbox-grid">
              <div class="checkbox-item">
                <input type="checkbox" id="org_hospital" name="contact[org_type_hospital]" value="Hospital / Health System">
                <label for="org_hospital">Hospital / Health System</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="org_clinic" name="contact[org_type_clinic]" value="Clinic / Medical Practice">
                <label for="org_clinic">Clinic / Medical Practice</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="org_distributor" name="contact[org_type_distributor]" value="Distributor / Supplier">
                <label for="org_distributor">Distributor / Supplier</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="org_university" name="contact[org_type_university]" value="University / Research Lab">
                <label for="org_university">University / Research Lab</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="org_government" name="contact[org_type_government]" value="Government Agency / Military">
                <label for="org_government">Government Agency / Military Facility</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="org_corporate" name="contact[org_type_corporate]" value="Corporate Health & Safety">
                <label for="org_corporate">Corporate Health & Safety Program</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="org_rehab" name="contact[org_type_rehab]" value="Rehabilitation / Physical Therapy">
                <label for="org_rehab">Rehabilitation / Physical Therapy Center</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="org_optometry" name="contact[org_type_optometry]" value="Optometry / Ophthalmology">
                <label for="org_optometry">Optometry / Ophthalmology Practice</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="org_other" name="contact[org_type_other_checkbox]" value="Other">
                <label for="org_other">Other (please specify)</label>
              </div>
            </div>
            <div class="other-input" id="other_org_input">
              <input type="text" name="contact[org_type_other]" placeholder="Please specify your organization type">
            </div>
          </div>

          <div class="form-group full-width">
            <label>Estimated Need:<span class="required">*</span></label>
            <div class="radio-group">
              <div class="checkbox-item">
                <input type="radio" id="need_under50" name="contact[estimated_need]" value="Under 50 Units" required>
                <label for="need_under50">Under 50 Units</label>
              </div>
              <div class="checkbox-item">
                <input type="radio" id="need_50_200" name="contact[estimated_need]" value="50â€“200 Units" required>
                <label for="need_50_200">50â€“200 Units</label>
              </div>
              <div class="checkbox-item">
                <input type="radio" id="need_200_500" name="contact[estimated_need]" value="200â€“500 Units" required>
                <label for="need_200_500">200â€“500 Units</label>
              </div>
              <div class="checkbox-item">
                <input type="radio" id="need_500plus" name="contact[estimated_need]" value="500+ Units" required>
                <label for="need_500plus">500+ Units</label>
              </div>
            </div>
          </div>

          <div class="form-group full-width">
            <label>Product Interest (check all that apply):</label>
            <div class="checkbox-group">
              <div class="checkbox-item">
                <input type="checkbox" id="product_prescription" name="contact[product_prescription]" value="Prescription Safety Goggles">
                <label for="product_prescription">Prescription Safety Goggles</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="product_non_prescription" name="contact[product_non_prescription]" value="Non-Prescription Safety Goggles">
                <label for="product_non_prescription">Non-Prescription Safety Goggles</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="product_accessories" name="contact[product_accessories]" value="Accessories / Lanyards / Hard Cases">
                <label for="product_accessories">Accessories / Lanyards / Hard Cases</label>
              </div>
            </div>
          </div>

          <div class="form-group full-width">
            <label for="additional_notes">Additional Notes or Requirements:</label>
            <textarea id="additional_notes" name="contact[body]" placeholder="Please share any specific requirements, timelines, or questions you may have..."></textarea>
          </div>

          <div class="form-group full-width">
            <label>Preferred Follow-Up Method:<span class="required">*</span></label>
            <div class="radio-group">
              <div class="checkbox-item">
                <input type="radio" id="followup_email" name="contact[followup_method]" value="Email" required>
                <label for="followup_email">ðŸ“§ Email</label>
              </div>
              <div class="checkbox-item">
                <input type="radio" id="followup_phone" name="contact[followup_method]" value="Phone" required>
                <label for="followup_phone">ðŸ“ž Phone</label>
              </div>
              <div class="checkbox-item">
                <input type="radio" id="followup_video" name="contact[followup_method]" value="Video Meeting" required>
                <label for="followup_video">ðŸ’» Video Meeting</label>
              </div>
            </div>
          </div>

          <div class="submit-wrapper">
            <button type="submit" class="submit-btn">Submit Inquiry</button>
            <p class="form-notice">
              By submitting this form, you agree to be contacted by our Institutional Partnership Team regarding your inquiry.
            </p>
          </div>
        </div>
      {% endform %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const orgOther = document.getElementById('org_other');
    const otherInput = document.getElementById('other_org_input');
    
    if (orgOther && otherInput) {
      orgOther.addEventListener('change', function() {
        if (this.checked) {
          otherInput.classList.add('active');
        } else {
          otherInput.classList.remove('active');
          const input = otherInput.querySelector('input');
          if (input) input.value = '';
        }
      });
    }
  });
</script>